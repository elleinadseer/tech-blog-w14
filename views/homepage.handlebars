    <!-- formatting to show each post-->
    {{#each posts as |post|}}

    <section class="mainPost">

        <p class="title"> <a href="/post/{{post.id}}">{{post.title}}</a> <span class="timestamp"> {{format_date post.created_at}} </span> </p>

        <p class="postContent"> {{post.body}} </p>

    </section>

    {{/each}}

